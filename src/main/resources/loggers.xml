<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="com.epam.spring.mvc.loggers.ConsoleEventLogger" />

    <bean id="fileEventLogger" class="com.epam.spring.mvc.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="fileToWriteEvents.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="com.epam.spring.mvc.loggers.CacheFileEventLogger" destroy-method="destroy" parent="fileEventLogger">
    <constructor-arg value="3"/>
    </bean>

</beans>