<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.mvc.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <!--<bean id="eventLogger" class="com.epam.spring.mvc.loggers.ConsoleEventLogger" />-->

    <bean id="app" class="com.epam.spring.mvc.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.epam.spring.mvc.loggers.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateInstance"/>

    <bean id="eventLogger" class="com.epam.spring.mvc.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="fileToWriteEvents.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="com.epam.spring.mvc.loggers.CacheFileEventLogger" destroy-method="destroy" parent="eventLogger">
        <constructor-arg value="3"/>
    </bean>

</beans>